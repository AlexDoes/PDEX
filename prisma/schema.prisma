generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String            @id @default(cuid())
  email          String            @unique
  name           String
  collections    plantCollection[]
  role           Role              @default(USER)
  uniquePlants   UniquePlant[]     @relation("UsersUniquePlant")
  favoritePlants UniquePlant[]     @relation("FavoritePlant")

  @@index([email], name: "email")
}

model Plant {
  id          String  @id @default(cuid())
  name        String // to be removed
  description String
  image       String
  species     String?
  water       String?
  light       String?
  humidity    String?
}

model UniquePlant {
  id           String           @id @default(cuid())
  name         String
  description  String
  image        String
  species      String?
  water        String?
  light        String?
  humidity     String?
  // owner       User[]  @relation("UsersUniquePlant")
  owner        User             @relation("UsersUniquePlant", fields: [ownerId], references: [id])
  ownerId      String
  favoritedBy  User?            @relation("FavoritePlant", fields: [userId], references: [id])
  userId       String?
  collection   plantCollection? @relation("CollectionPlant", fields: [collectionId], references: [id])
  collectionId String?
}

model plantCollection {
  id      String        @id @default(cuid())
  name    String
  plants  UniquePlant[] @relation("CollectionPlant")
  owner   User          @relation(fields: [ownerId], references: [id])
  ownerId String
}

enum Role {
  USER
  EDITOR
  ADMIN
}
